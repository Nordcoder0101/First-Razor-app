<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>Hello!</title>
        <!-- <link rel="stylesheet" href="~/css/style.css"/> -->
    </head>
    <body>
      <h1>Hello!</h1>
      @{
        var StringList = new List<string>{
          "Apple Pie",
          "Burritos", 
          "Clams Casino",
          "Donuts"
          };
          
          foreach(var w in StringList)          
          {
            <div>
            @if(w.Substring(0,1) == "C")
            {
              <p style="color:red;">@w</p>
              
            }
            else
            {
              <p>@w</p>    
              
            }
            </div>
          }
      }
      
    </body>

